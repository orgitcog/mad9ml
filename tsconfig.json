
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "ES2022.Object", "ES2022.Array"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "marduk-ts/*": ["marduk-ts/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist/**/*", "marduk-ts/**/*"]
}
